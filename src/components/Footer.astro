---
import { siteConfig } from '@/site.config'
import Container from './vue/Container.vue'
import TimeLocal from './vue/TimeLocal.vue'

const { footer } = siteConfig
---

<footer class="bg-foreground text-background">
  <Container>
    <div
      class={`
        flex flex-col items-start justify-between gap-2 border-t
        border-background/50 pt-4 pb-8 text-xs
        sm:flex-row sm:items-center
        lg:pt-12
      `}
    >
      <p>&copy; <TimeLocal year="numeric" /> {footer.copyright}</p>
      <p>{footer.tagline}</p>
    </div>
  </Container>
</footer>
