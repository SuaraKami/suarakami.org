---
import type { LanguageKeys } from '@/i18n'
import { useTranslations } from '@/i18n'
import { siteConfig } from '@/site.config'
import Container from '../vue/Container.vue'

interface Props {
  lang: LanguageKeys
}
const { lang } = Astro.props
const { email, socialMediaLinks } = siteConfig

const t = useTranslations(lang)
---

<section id="contacts" class="bg-foreground text-background">
  <Container class="py-32 md:py-48 lg:py-64">
    <div class="grid grid-cols-12 gap-6">
      <div class="col-span-12 space-y-4 md:col-span-3">
        <span class="font-mono text-xs tracking-wider opacity-50">03</span>
        <h2 class="text-5xl leading-tight font-light md:text-6xl">
          {t('nav.contacts')}
        </h2>
      </div>

      <div class="col-span-12 md:col-span-8 md:col-start-5">
        <div class="grid grid-cols-1 gap-16 md:grid-cols-2 md:gap-24">
          <div class="space-y-6">
            <span class="font-mono text-xs tracking-wider uppercase opacity-50">
              {t('contact.email')}
            </span>
            <a
              href={`mailto:${email}`}
              class={`
                block text-xl font-light transition-opacity
                hover:opacity-50
                md:text-2xl
              `}
            >
              {email}
            </a>
          </div>

          <div class="space-y-6">
            <span class="font-mono text-xs tracking-wider uppercase opacity-50">
              {t('contact.follow')}
            </span>
            <div class="flex flex-col gap-4">
              {
                socialMediaLinks.map((social) => (
                  <a
                    href={social.to}
                    target="_blank"
                    rel="noopener noreferrer"
                    class={`
                      text-xl font-light transition-opacity
                      hover:opacity-50
                      md:text-2xl
                    `}
                  >
                    {social.label}
                  </a>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
