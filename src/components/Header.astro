---
import type { LanguageKeys } from '@/i18n'
import { useTranslations } from '@/i18n'
import { siteConfig } from '@/site.config'
import Logo from './Logo.astro'
import VHeader from './vue/Header.vue'
import LinkLocal from './vue/LinkLocal.vue'

interface Props {
  lang: LanguageKeys
}

const { lang } = Astro.props
const t = useTranslations(lang)
---

<VHeader lang={lang} client:idle>
  <Logo slot="logo" />
  {
    siteConfig.navigation.map((link, i) => (
      <LinkLocal href={link.to} class="group flex items-center gap-2" client:idle>
        <span class="font-mono text-xs tracking-wider opacity-40">{String(i + 1).padStart(2, '0')}</span>
        <span
          class={`
            text-sm font-light tracking-wide uppercase transition-opacity
            hover:opacity-50
          `}
        >
          {t(`nav.${link.code}`)}
        </span>
      </LinkLocal>
    ))
  }
</VHeader>
